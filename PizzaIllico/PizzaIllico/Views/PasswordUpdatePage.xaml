<?xml version="1.0" encoding="utf-8" ?>
<controls:PageLayoutTemplateControl xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:PizzaIllico.Controls"
             x:Class="PizzaIllico.Views.PasswordUpdatePage"
             ControlTemplate="{StaticResource ViewLayoutTemplate}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="20">
                <Entry Placeholder="Password" FontSize="16" Text="{Binding Password}" IsPassword="True" />
                <Entry Placeholder="New Password" FontSize="16" Text="{Binding New_password}" IsPassword="True" />
                <!--Label FontSize="12" Text="{Binding ErrorMessage}" / -->
                <Button Text="Send" HorizontalOptions="FillAndExpand" TextColor="White" Grid.Row="3"
                               BackgroundColor="Black" Command="{Binding ExecuteCommand}" />
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</controls:PageLayoutTemplateControl>